{
  "manifest_version": 2,
  "name": "HTTP Request Logger",
  "version": "1.0",
  "description": "A private Chrome Extension to intercept and log HTTP requests on a specific website.",
  
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "activeTab"
  ],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "browser_action": {
    "default_popup": "popup.html"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "manifest_key": "value"
}
